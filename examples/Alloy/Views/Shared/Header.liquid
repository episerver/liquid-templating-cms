<header>
	<div class="container">
		<nav class="navbar navbar-expand-lg">
			<div class="container-fluid">
				<a class="navbar-brand logo" href="{{ Model.Layout.LogotypeLinkUrl }}" title="{{ Model.Layout.Logotype.Title }}">
					{{ Property.For(Model = Model.Layout.Logotype) }}
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon">
						<i class="bi bi-list"></i>
					</span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav">
						{% assign navigationPages = ContentLoader.GetChildren(CmsContext.StartPage) | visible_in_menu | for_visitor %}
						{% for page in navigationPages %}
						{% assign activeClass = "" %}
						{% if page.ID == Model.CurrentPage.ContentLink.ID %}
						{% assign activeClass = "active" %}
						{% endif %}
						<li class="nav-item">
								<a class="nav-link " href="{{ page | url }}">{{ page.Name }}</a>
							</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</nav>
	</div>
</header>

